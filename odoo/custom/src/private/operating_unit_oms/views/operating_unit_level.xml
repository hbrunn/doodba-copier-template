<odoo>
    <record id="view_operating_unit_level_form" model="ir.ui.view">
        <field name="model">operating.unit.level</field>
        <field name="arch" type="xml">
            <form>
                <group name="main">
                    <field name="name" />
                    <field name="level" />
                </group>
            </form>
        </field>
    </record>
    <record id="view_operating_unit_level_tree" model="ir.ui.view">
        <field name="model">operating.unit.level</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="name" />
                <field name="level" />
            </tree>
        </field>
    </record>
    <record id="action_operating_unit_level" model="ir.actions.act_window">
        <field name="name">Operating Unit Levels</field>
        <field name="res_model">operating.unit.level</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_operating_unit_level_tree" />
    </record>
    <menuitem
        id="menu_operating_unit_level"
        action="action_operating_unit_level"
        parent="base.menu_users"
        groups="operating_unit.group_multi_operating_unit"
    />
</odoo>
